<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:text="Name:"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|end"
            android:padding="14dp"
            android:textSize="16sp"
            android:password="false"
            android:text="Item Name" />

        <ImageButton
            android:id="@+id/copy_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingHorizontal="8dp"
            android:background="@drawable/rounded_corners"
            android:src="?android:attr/actionModeCopyDrawable" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:text="Username:"/>

        <TextView
            android:id="@+id/item_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|end"
            android:padding="14dp"
            android:textSize="16sp"
            android:password="false"
            android:text="Username"/>

        <ImageButton
            android:id="@+id/copy_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingHorizontal="8dp"
            android:background="@drawable/rounded_corners"
            android:src="?android:attr/actionModeCopyDrawable" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:text="Password:"/>

        <TextView
            android:id="@+id/item_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|end"
            android:padding="14dp"
            android:textSize="16sp"
            android:password="true"
            android:text="Password"/>

        <ImageButton
            android:id="@+id/show_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="45dp"
            android:background="@drawable/rounded_corners2"
            android:paddingHorizontal="8dp"
            android:src="@android:drawable/ic_menu_view" />

        <ImageButton
            android:id="@+id/copy_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingHorizontal="8dp"
            android:background="@drawable/rounded_corners"
            android:src="?android:attr/actionModeCopyDrawable" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/domainText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|start"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:text="Domain:"/>

        <TextView
            android:id="@+id/item_domain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|end"
            android:padding="14dp"
            android:textSize="16sp"
            android:text="Domain"/>

        <ImageButton
            android:id="@+id/launch_url"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="45dp"
            android:background="@drawable/rounded_corners2"
            android:paddingHorizontal="8dp"
            android:src="@android:drawable/ic_menu_set_as" />

        <ImageButton
            android:id="@+id/copy_url"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingHorizontal="8dp"
            android:background="@drawable/rounded_corners"
            android:src="?android:attr/actionModeCopyDrawable" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/quickshare_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:text="Quickshare"/>

    <Button
        android:id="@+id/edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#c45c00"
        android:text="Edit Fields" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B80404"
        android:layout_marginTop="10dp"
        android:text="Delete Password"/>

</LinearLayout>



