<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:text="Item Name"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_username"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:text="Username"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_password"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:text="Password"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/item_domain"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:text="Domain"
        android:textAppearance="?attr/textAppearanceListItem" />
    <Button
        android:id="@+id/copy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:drawable="@android:drawable/ic_menu_delete"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:padding="8dp"
        android:text="COPY PASSWORD"
        android:visibility="visible" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#B80404"
        android:text="Delete Password" />
    <Button
        android:id="@+id/quickshare_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:drawable="@android:drawable/ic_menu_delete"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:padding="8dp"
        android:text="Quickshare"
        android:visibility="visible" />

</LinearLayout>



