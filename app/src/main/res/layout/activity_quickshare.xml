<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/matchCodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Match Code" />

        <EditText
            android:id="@+id/matchCodeInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:autofillHints=""
            android:hint="Enter Match Code"
            android:inputType="text" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:layout_below="@id/passwordEditText"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/beginWaitingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Password"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/sharedPasswordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password shared successfully!"
        android:visibility="gone"
        android:layout_marginTop="16dp" />
    <Button
        android:id="@+id/copyPassword_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:drawable="@android:drawable/ic_menu_delete"
        android:drawablePadding="8dp"
        android:focusable="false"
        android:padding="8dp"
        android:text="Copy Password"
        android:visibility="gone" />

</LinearLayout>